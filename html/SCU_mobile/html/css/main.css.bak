@charset "UTF-8";
html,body{font-family:'Noto Sans CJK KR'}
.bg1{background:#fff url(../image/bg.jpg) no-repeat top left; background-size:100% 100%; height:349px;}
article{width:100%;}
.inner{position:relative; width:715px; margin:0 auto;}

/*header*/
#mobile_menu h1{text-align:center; padding-top:10px;}
#mobile_menu ul.top_icon{position:absolute; right:10px; top:30px;}
#mobile_menu ul.top_icon li{float:left; padding-right:10px; cursor:pointer;}


/*sch*/
.sch{display:none; width:100%; height:80px; text-align:center; margin-top:30px;  z-index:8888; position:relative;}
.sch input[type="sch_text"]{width:400px; height:34px; border:1px solid #23714d; font-size:14px;
border-radius:3px; padding-left:5px; box-sizing:border-box;}
.sch form .btn_sch{width:40px; height:34px; background:#23714d; border:0; text-align:center; border-radius:3px;}

/*login*/
.login{display:none; width:100%; height:360px; background:#10b166; z-index:8888; position:relative;}
.login .login_inner{width:65%; margin:0 auto; padding-top:15px;}
.login .login_inner > h5{font-size:30px; font-weight:600; color:#fff; margin-top:7%; padding-bottom:2%; text-align:center;}
.login .login_inner > p a{display:block; font-size:15px; float:left; margin:13px 0; padding-left:15px;}
.login .login_inner > span a{display:block; font-size:15px; float:right; margin:13px 0; padding-right:15px;}
.login .login_inner form{text-align:center;}
.login .login_inner form input[type="text"]{width:500px; height:40px; border:1px solid #ccc; margin-bottom:2%;}
.login .login_inner form .btn_login{width:500px; height:40px; background:#23714d; border:0; font-size:17px; color:#fff;}

.login .login_inner > ul{width:100%; overflow:hidden; padding-top:20px; text-align:center;}
.login .login_inner > ul li{display:inline-block; width:10%;}
.login .login_inner > ul li a img{width:36px;}



/*visual*/
.visual{width:715px; margin:0 auto;}
.visual .bx-wrapper .bx-pager {bottom:40px; }
.visual .bx-wrapper .bx-controls-direction a {display:none; }



/*main_content*/
.main_content{margin:50px 0;}


/*SCU 주요서비스*/
.scu_sch{margin-bottom:50px;}
.scu_sch h2{text-align:center; font-size:24px; color:#282828; letter-spacing:-1px; margin-bottom:40px;}
.scu_sch ul{font-size:0; text-align:center;}
.scu_sch li {display:inline-block; width:20%;}
.scu_sch li p{font-size:16px; margin-top:20px; line-height:145%; }
.scu_sch li p br{display:none;}
.scu_sch li img{background:#fbfbf2; padding:10px; border-radius:70px; -webkit-border-radius:70px; -moz-border-radius:70px; -o-border-radius:70px;
 box-shadow:2px 2px 5px rgba(0,0,0,0.3); 
-webkit-box-shadow:2px 2px 5px rgba(0,0,0,0.3); -moz-box-shadow:2px 2px 5px rgba(0,0,0,0.3); -o-box-shadow:2px 2px 5px rgba(0,0,0,0.3);}

/*bbs*/
.bbs{margin:80px auto; width:94%;}
.bbs ul.tabs {text-align:center; font-size:0;}
.bbs ul.tabs li {display:inline-block; font-size:24px; cursor: pointer;overflow: hidden;position: relative; font-weight:700; height:70px; line-height:70px; margin:0 15px;}
.bbs ul.tabs li:after{position:absolute; content:""; width:10px; height:10px; background:#b4f5d6; border-radius:50px; top:0; left:50%; margin-left:-5px; display:block;}
.bbs ul.tabs li.active{color:#10b166;}
.bbs ul.tabs li.active:after {background:#10b166; }
.bbs .tab_container {
	margin-top:50px;
	width:100%;
}
.bbs .tab_content {display:none;}




.txt.nt1 img,
.txt.nt2 img,
.txt.nt3 img{position:relative !important; box-shadow:3px 3px 3px #797979; margin:0 auto; }


.t01,
.t02,
.t03{position:absolute;  padding-left:5px; z-index:999999; }


.t01 strong{color:#d88352; font-size:18px; line-height:115%;}

.t01 span{color:#eabea5; font-size:15px;  line-height:155%;}


.t02 strong{font-size:18px; color:#30b59a; }

.t02 span{color:#2a927d; font-size:15px; line-height:195%; }


.t02 > p{font-size:15px; color:#4f6058; padding:90px 0 0 130px; }

.t03 > p{font-size:15px; color:#4f6058; padding-left:120px; }


.t03 strong{font-size:18px; color:#fa9da1;}

.t03 span{color:#fa9da1; font-size:15px; line-height:195%;  }
.t03 a > p{font-size:14px; color:#fa9da1; letter-spacing:-1; padding:20px 0 0 65px; font-weight:400; line-height:155%;}





.slider {width:100%;margin:0 auto; box-sizing:border-box;}

.slick-slide { margin:0px 10px;}

.slick-slide img {width: 100%;}

.slick-prev:before,
.slick-next:before {color:black;}


.slick-slide {transition:all ease-in-out .3s; opacity: .2;}

.slick-active {opacity: .5;}

.slick-current {opacity: 1;}






/*배너*/
.banner{overflow:hidden;}
.banner.inner h2{text-align:left; margin-bottom:20px; }
.banner .popup{float:left; width:48%;}
.banner .mov{float:right; width:48%;}



.banner .mov img{width:100%; position:relative !important;}
.mov_txt{position:absolute; top:43%; right:1%; text-align:center; color:#f62960; font-size:15px; z-index:9999; font-weight:500; line-height:155%;}

.banner .popup{position:relative;}
.banner .popup .page{position:absolute; z-index:9999; right:10px; top:60px;}
.banner .popup .page li{display:inline-block;}
.banner .popup .page a{display:block; width:10px; height:10px; background:#000; border-radius:50px; -webkit-border-radius:50px; -moz-border-radius:50px; -o-border-radius:50px; margin:0 3px;}
.banner .popup .page a:active{background:red;}
.banner .popup img{width:100%;}


#mov_txt2{display:none;}



/*section4 신설학과소개*/
.section4slider { margin:100px auto; }


.sec4tit.inner h6{font-size:30px; font-weight:600; margin-bottom:58px;}
.sec4tit.inner h6 span{color:#20e2a0;}


.sec4_bg{background:#defbf1; position:relative !important; padding:50px; }
.se4_major strong{font-size:25px; padding-bottom:30px;}
.se4_major p{font-size:16px; font-weight:600;  margin:10px auto; line-height:115%;}
.se4_major span{font-size:14px; }

.inner.se4_human > img{position:absolute; right:40px; top:-120px; z-index:99999; }







/*footer*/
.footer{width:100%; background:#f1f1f1;}
.footer .logo{position:relative; border-bottom:1px solid #ccc; padding:12px 0;}
.footer .logo img{padding-left:40px;}
.footer .logo a{display:block; position:absolute; right:40px; top:32px; background:#fff;
width:73px; height:32px; text-align:center; line-height:32px; font-weight:500; font-size:18px;}

.footer .copy ul{text-align:center;}
.footer .copy ul li{display:inline-block; color:#999; padding-top:45px; font-size:14px;}
.footer .copy ul li a{color:#575757; font-size:16px;}
.footer .copy p{text-align:center; display:block; line-height:130%; padding-top:15px; color:#777777; font-size:15px;}
.footer .copy p > span{display:block; color:#cecdcd; padding-top:10px; padding-bottom:45px; font-size:15px;}

#footer_copy{display:none;}
